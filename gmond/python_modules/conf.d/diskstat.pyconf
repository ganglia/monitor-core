modules {
  module {
    name    = 'diskstat'
    language = 'python'

    # Specify devices you want to monitor or if empty it will 
    # pick all devices
    param devices {
      value = ''
    }
    #param device-mapper {
    #  value = 'true'
    #}
  }
}

collection_group {
  collect_every  = 30
  time_threshold = 30

  metric {
    name_match = "diskstat_(.+)"
  }
}
